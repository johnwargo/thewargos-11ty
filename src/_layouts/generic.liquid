  <head>
    <title>{{ siteTitle }}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <link rel="stylesheet" href="/assets/css/scott.css" />
    {% include "google-analytics.html" %}
  </head>
  <body class="no-sidebar is-preload">
    <div id="page-wrapper">
      {% include "header.html" %}
      <section id="main">
        <div class="container">
          <article class="box post">
            {% if headerImage %}
              {% image "{{ headerImage }}", "{{ headerAltText }}", "image featured" %}
            {% else %}
              {% image "src/images/collage-header.png", "wargo family collage", "image featured" %}
            {% endif %}
            <header>
              <h2>{{ title }}</h2>
            </header>
            {{ content }}
          </article>
        </div>
      </section>
      {% include "footer.html" %}
    </div>
    {% include "scripts.html" %}
  </body>
</html>